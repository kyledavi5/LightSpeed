<UserControl x:Class="LightSpeed.Customers.Dialogs.UpdateCustomerDetailsDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             Width="220" Height="220">
    <StackPanel>
        <TextBlock Text="Customer Details" FontSize="22" Margin="5,5,2,10" />
        <Label Content="First Name:" Margin="2,10,2,2" />
        <TextBox Text="{Binding CustomerFirstName}" />
        <Label Content="Last Name:" Margin="2,10,2,2" />
        <TextBox Text="{Binding CustomerLastName}" />
        <Button Command="{Binding CloseDialogCommand}" CommandParameter="True" Content="OK" Width="75" Height="25" HorizontalAlignment="Right" Margin="0,10,15,0" Grid.Row="1" />
        <Button Command="{Binding CloseDialogCommand}" CommandParameter="False"  Content="Cancel" Width="75" Height="25" HorizontalAlignment="Right" Margin="0,10,15,0" Grid.Row="1" IsDefault="True" />
    </StackPanel>
</UserControl>
