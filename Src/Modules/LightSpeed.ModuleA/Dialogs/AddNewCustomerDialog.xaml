<UserControl x:Class="LightSpeed.Customers.Dialogs.AddNewCustomerDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             Width="220" Height="220">
    <StackPanel>
        <TextBlock Text="Add New Customer" FontSize="22" Margin="5,5,2,10" />
        <Label Content="First Name:" Margin="2,10,2,2" />
        <TextBox Text="{Binding CustomerFirstName}" Margin="5,10,2,2" HorizontalAlignment="Left" Width="200" />
        <Label Content="Last Name:" Margin="2,10,2,2" />
        <TextBox Text="{Binding CustomerLastName}" Margin="5,10,2,2" HorizontalAlignment="Left" Width="200" />
        <Button Command="{Binding CloseDialogCommand}" Content="OK" Width="75" Height="25" HorizontalAlignment="Right" Margin="0,10,15,0" Grid.Row="1" IsDefault="True" />
    </StackPanel>
</UserControl>
