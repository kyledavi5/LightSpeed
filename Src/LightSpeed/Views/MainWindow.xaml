<Window x:Class="LightSpeed.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="LightSpeed" Height="700" Width="1150" >
    <DockPanel LastChildFill="True">
        <UserControl DockPanel.Dock="Top" prism:RegionManager.RegionName="HeaderRegion" />
        <UserControl DockPanel.Dock="Left" prism:RegionManager.RegionName="LeftRegion" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="25,20,0,5" />
        <UserControl DockPanel.Dock="Bottom" prism:RegionManager.RegionName="FooterRegion" />
        <UserControl DockPanel.Dock="Left" prism:RegionManager.RegionName="RightRegion" HorizontalAlignment="Center" VerticalAlignment="Top" Width="890" Margin="5,20,0,5"/>
    </DockPanel>
</Window>
